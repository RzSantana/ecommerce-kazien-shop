---
import Title from "@components/ui/Title.astro";
import ClientLayout from "@layouts/ClientLayout.astro";
import ProductsFilter from "@components/ProductsFilter";
import { productService } from "src/services/productService";

export const prerender = false;

const currencyType = "€";

// Obtener parámetro de búsqueda de la URL
const searchQuery = Astro.url.searchParams.get('q') || '';

let products: any[] = [];
let errorMessage = "";

try {
    const apiProducts = await productService.getAllProducts();

    // Transformar productos para el frontend
    products = apiProducts.map((product) => ({
        id: product.id,
        name: product.name,
        price: product.price,
        cover: product.cover,
        category: product.category,
        categoryId: product.categoryId,
        stock: product.stock,
        isNew: product.isNew,
        isTopSale: product.isTopSale,
        isLimited: product.isLimited,
    }));

    console.log(`Productos cargados: ${products.length}`);
    if (searchQuery) {
        console.log(`Búsqueda inicial: "${searchQuery}"`);
    }
} catch (error) {
    console.error("Error al cargar productos:", error);
    errorMessage = "Error al cargar los productos de la tienda.";
}
---

<ClientLayout>
    <section class="flex flex-col items-center pt-50 px-8 min-h-screen">
        <div class="mb-8 text-center">
            <Title isPrimary={false}>
                {searchQuery ? `SEARCH RESULTS` : `OUR PRODUCTS`}
            </Title>
            {searchQuery && (
                <p class="text-gray-600 text-lg mt-2">
                    Search results for "<span class="font-semibold">{searchQuery}</span>"
                </p>
            )}
        </div>

        {
            errorMessage ? (
                <div class="text-center py-16">
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                        {errorMessage}
                    </div>
                    <p class="text-gray-500">
                        Por favor, intenta nuevamente más tarde o verifica que
                        el servidor esté funcionando.
                    </p>
                </div>
            ) : (
                <ProductsFilter
                    products={products}
                    currencyType={currencyType}
                    initialSearchQuery={searchQuery}
                    client:load
                />
            )
        }
    </section>
</ClientLayout>
