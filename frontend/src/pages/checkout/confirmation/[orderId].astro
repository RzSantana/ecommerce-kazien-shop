---
import ClientLayout from "@layouts/ClientLayout.astro";
import Button from "@components/ui/Button";

export const prerender = false;

const { orderId } = Astro.params;

if (!orderId) {
    return Astro.redirect("/");
}
---

<ClientLayout>
    <div class="pt-32 px-4 max-w-4xl mx-auto min-h-screen">
        <!-- Confirmación de pedido -->
        <div class="text-center mb-8">
            <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
                ¡Pedido Confirmado!
            </h1>
            <p class="text-gray-600 mb-4">
                Gracias por tu compra. Tu pedido ha sido procesado exitosamente.
            </p>
            <div class="inline-flex items-center px-4 py-2 bg-gray-100 rounded-lg">
                <span class="text-sm text-gray-600 mr-2">Número de pedido:</span>
                <span class="font-bold text-gray-900" id="order-id">{orderId}</span>
            </div>
        </div>

        <!-- Detalles del pedido -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-xl font-semibold mb-4">Detalles del Pedido</h2>
            <div id="order-details" class="space-y-4">
                <!-- Se llenará con JavaScript -->
            </div>
        </div>

        <!-- Qué sigue -->
        <div class="bg-blue-50 rounded-lg p-6 mb-8">
            <h3 class="text-lg font-semibold text-blue-900 mb-3">¿Qué sigue?</h3>
            <div class="space-y-2 text-blue-800">
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Recibirás un email de confirmación en breve</span>
                </div>
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>Procesaremos tu pedido en 1-2 días hábiles</span>
                </div>
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>El envío llegará en 3-5 días hábiles</span>
                </div>
            </div>
        </div>

        <!-- Acciones -->
        <div class="text-center space-y-4">
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <Button text="Ver Mis Pedidos" type="primary" href="/orders" />
                <Button text="Seguir Comprando" type="outline" href="/shop" />
            </div>
            <Button text="Volver al Inicio" type="link" href="/" />
        </div>
    </div>

    <script type="module">
        import { checkoutService } from '/src/services/checkoutService.ts';

        // Cargar detalles del pedido
        document.addEventListener('DOMContentLoaded', () => {
            const orderId = document.getElementById('order-id')?.textContent;
            if (!orderId) return;

            try {
                const order = checkoutService.getOrderById(orderId);
                if (!order) {
                    document.getElementById('order-details').innerHTML = `
                        <div class="text-red-600">No se pudo cargar la información del pedido.</div>
                    `;
                    return;
                }

                // Mostrar detalles del pedido
                const orderDetailsHTML = `
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <h4 class="font-semibold mb-2">Información de Envío</h4>
                            <div class="text-sm text-gray-600 space-y-1">
                                <div>${order.shippingInfo.fullName}</div>
                                <div>${order.shippingInfo.email}</div>
                                <div>${order.shippingInfo.phone}</div>
                                <div>${order.shippingInfo.address}</div>
                                <div>${order.shippingInfo.city}, ${order.shippingInfo.postalCode}</div>
                                <div>${order.shippingInfo.country}</div>
                            </div>
                        </div>
                        <div>
                            <h4 class="font-semibold mb-2">Resumen de Pago</h4>
                            <div class="text-sm space-y-1">
                                <div class="flex justify-between">
                                    <span>Subtotal:</span>
                                    <span>${order.subtotal.toFixed(2)}€</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>Envío:</span>
                                    <span>${order.shipping === 0 ? 'GRATIS' : order.shipping.toFixed(2) + '€'}</span>
                                </div>
                                <div class="flex justify-between font-bold border-t pt-1">
                                    <span>Total:</span>
                                    <span>${order.total.toFixed(2)}€</span>
                                </div>
                                <div class="text-xs text-gray-500 mt-2">
                                    Pago con ${order.paymentInfo.cardNumber}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-6">
                        <h4 class="font-semibold mb-3">Productos Pedidos (${order.items.length})</h4>
                        <div class="space-y-3">
                            ${order.items.map(item => `
                                <div class="flex items-center space-x-3 p-3 border rounded">
                                    <img src="${item.cover}" alt="${item.name}" class="w-12 h-12 object-cover rounded">
                                    <div class="flex-grow">
                                        <div class="font-medium">${item.name}</div>
                                        <div class="text-sm text-gray-600">Cantidad: ${item.quantity}</div>
                                    </div>
                                    <div class="font-medium">${(item.price * item.quantity).toFixed(2)}€</div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                `;

                document.getElementById('order-details').innerHTML = orderDetailsHTML;
            } catch (error) {
                console.error('Error loading order details:', error);
                document.getElementById('order-details').innerHTML = `
                    <div class="text-red-600">Error al cargar los detalles del pedido.</div>
                `;
            }
        });
    </script>
</ClientLayout>
