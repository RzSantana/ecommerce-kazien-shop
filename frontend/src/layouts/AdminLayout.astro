---
// AdminLayout.astro - SIN verificaciones de autenticación
// El middleware ya se encarga de eso
import MainLayout from "./MainLayout.astro";
import Button from "@components/ui/Button";
import { getSession } from "auth-astro/server";

export const prerender = false;

// Solo obtener la sesión para mostrar info del usuario
// NO hay verificaciones ni redirecciones aquí
const session = await getSession(Astro.request);
const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<MainLayout title={`Admin - ${title || "Dashboard"}`}>
    <div class="flex h-screen bg-gray-50">
        <!-- Sidebar -->
        <div class="w-64 bg-white shadow-lg">
            <div class="p-6">
                <div class="flex items-center">
                    <img
                        class="h-8 w-8"
                        src="/logo-color-primary.svg"
                        alt="Logo"
                    />
                    <span class="ml-2 text-xl font-bold">Admin Panel</span>
                </div>
            </div>

            <nav class="mt-6">
                <div class="px-6 pb-4">
                    <h3
                        class="text-xs font-semibold text-gray-500 uppercase tracking-wide"
                    >
                        Management
                    </h3>
                </div>

                <div class="space-y-1">
                    <a
                        href="/admin"
                        class={`flex items-center px-6 py-3 text-sm font-medium ${
                            currentPath === "/admin"
                                ? "bg-blue-50 text-blue-700 border-r-2 border-blue-500"
                                : "text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                        }`}
                    >
                        <svg
                            class="w-5 h-5 mr-3"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"
                            ></path>
                        </svg>
                        Dashboard
                    </a>

                    <a
                        href="/admin/products"
                        class={`flex items-center px-6 py-3 text-sm font-medium ${
                            currentPath === "/admin/products"
                                ? "bg-blue-50 text-blue-700 border-r-2 border-blue-500"
                                : "text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                        }`}
                    >
                        <svg
                            class="w-5 h-5 mr-3"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"
                            ></path>
                        </svg>
                        Products
                    </a>

                    <a
                        href="/admin/categories"
                        class={`flex items-center px-6 py-3 text-sm font-medium ${
                            currentPath === "/admin/categories"
                                ? "bg-blue-50 text-blue-700 border-r-2 border-blue-500"
                                : "text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                        }`}
                    >
                        <svg
                            class="w-5 h-5 mr-3"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                            ></path>
                        </svg>
                        Categories
                    </a>

                    <a
                        href="/admin/users"
                        class={`flex items-center px-6 py-3 text-sm font-medium ${
                            currentPath === "/admin/users"
                                ? "bg-blue-50 text-blue-700 border-r-2 border-blue-500"
                                : "text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                        }`}
                    >
                        <svg
                            class="w-5 h-5 mr-3"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5 0a4 4 0 11-8 0"
                            ></path>
                        </svg>
                        Users
                    </a>

                    <a
                        href="/admin/drops"
                        class={`flex items-center px-6 py-3 text-sm font-medium ${
                            currentPath === "/admin/drops"
                                ? "bg-blue-50 text-blue-700 border-r-2 border-blue-500"
                                : "text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                        }`}
                    >
                        <svg
                            class="w-5 h-5 mr-3"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                            ></path>
                        </svg>
                        Collections
                    </a>
                </div>

                <div class="mt-8 px-6 pb-4">
                    <h3
                        class="text-xs font-semibold text-gray-500 uppercase tracking-wide"
                    >
                        Account
                    </h3>
                </div>

                <div class="space-y-1">
                    <a
                        href="/"
                        class="flex items-center px-6 py-3 text-sm font-medium text-gray-700 hover:bg-gray-100 hover:text-gray-900"
                    >
                        <svg
                            class="w-5 h-5 mr-3"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                            ></path>
                        </svg>
                        Back to Site
                    </a>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-white shadow-sm border-b border-gray-200">
                <div class="flex items-center justify-between px-6 py-4">
                    <h1 class="text-2xl font-semibold text-gray-900">
                        {title || "Dashboard"}
                    </h1>

                    <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-600">
                            Welcome, {
                                session?.user?.name ||
                                    session?.user?.email ||
                                    "User"
                            }
                        </span>
                        <Button
                            text="Logout"
                            type="outline"
                            href="/api/auth/signout"
                        />
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6">
                <slot />
            </main>
        </div>
    </div>
</MainLayout>
